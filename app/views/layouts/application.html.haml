!!! html5
%html
  %head
    %title JacobJoins
    %link{ :href => "favicon.png", :rel => "icon", :type => "image/png" }
    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag "http://maps.googleapis.com/maps/api/js?key=AIzaSyBAt7YagkuVkG-eXQXemvn18f4yjiPMHCc&sensor=true&libraries=places"
    = javascript_include_tag "application"
    :javascript
      $(document).ready(function(){
        get_latest_recipe();
        $('#fancy_counter').tzineClock();
        get_facebook_stream();
        slide_newsbar();
        $("#newsbar").visibleAfter($("#start"));
      });
        
    
    = csrf_meta_tags
    %meta{:charset => "utf-8"}

  %body
    %section
      - flash.each do |key, value|
        %div{ class:"flash_#{key}"}
          = value      
    %section#newsbar
      #newsbar_content
        #fb
          %h2
            Join us on Facebook
          
        #entries
          %h2
            What happened so far  
          #last_entry

        #fancy_counter
          %h2
            Countdown to release on 4 june '12

        #countdown
          %h4.countdown_kl
            Countdown to release:
          #days
          #hours
          #minutes
          #seconds
       
        #logo
          = image_tag "logo.png"

      #clickandsee
        = link_to "", "#", class:"show_newsbar"

    = yield

    
