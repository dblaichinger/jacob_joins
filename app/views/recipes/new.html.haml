%h1 New_recipe

= form_for @recipe, :url => { :action => "create" }, :html => { :multipart => true } do |f|
  = handle_error_messages(@recipe).html_safe if @recipe.errors.any?

  %p
    = f.label :name, "Name"
    = f.text_field :name
  %p
    = f.label :portion, "Anzahl Portionen"
    = f.text_field :portion

  %p
    - 5.times do |i|
      %p
        = text_field_tag "recipe[ingredients_strings][][quantity]", nil, :id => "recipe_ingredients_strings__quantity#{i}"
        = text_field_tag "recipe[ingredients_strings][][ingredient]", nil, :id => "recipe_ingredients_strings__ingredient#{i}"

  %p
    = f.label :preparation, "Zubereitung"
    = f.text_area :preparation
  %p
    = f.label :duration, "Zubereitungszeit in Minuten"
    = f.text_field :duration
  %p
    = f.label :country, "Land"
    - if (!defined? @location) || (@location.data['country_name'].empty?)
      = f.text_field :country
    - else
      = f.text_field :country, :value => @location.data['country_name']
      
  %p
    = f.label :city, "Stadt"
    - if (!defined? @location) || (@location.data['city'].empty?)
      = f.text_field :city
    - else
      = f.text_field :city, :value => @location.data['city']

  %p
    = f.fields_for :images do |image|
      = image.label :attachment, "Bild Upload"
      = image.file_field :attachment
    =# label_tag "recipe[images][][attachment]", "Bild Upload"
    =# file_field_tag "recipe[images][][attachment]", :accept => 'image/png,image/gif,image/jpeg'

      
  .hidden
    = f.hidden_field :longitude
    = f.hidden_field :latitude

  .error

  %p
    = f.submit "Speichern"

