{
  "ingredients": <%= @ingredients.inspect.html_safe %>,
  "recipes": [
    <% @recipes.each_with_index do |r, index| %>
      {
        "slug": "<%= r.slug %>",
        "name": "<%= r.name %>",
        "country": "<%= r.country %>",
        "user": {
          "firstname": "<%= r.user.firstname.capitalize %>",
          "lastname": "<%= r.user.lastname[0].upcase + "." if r.user.lastname.present? %>"
        }
      }<%= "," if index != @recipes.count - 1 %>
    <% end %>
  ],
  "markers": [
    <% @recipes.each_with_index do |r, index| %>
      {
        "lat": "<%= r.latitude %>",
        "lng": "<%= r.longitude %>",
        "title": "<%= r.name %>",
        "description": "from <%= r.user.firstname.capitalize %>"
      }<%= "," if index != @recipes.count - 1 %>
    <% end %>
  ]
}